<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"

        app:layout_constraintBottom_toTopOf="@id/main_bottom_nav_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Divider -->
    <View
        android:id="@+id/main_bottom_nav_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_300"

        app:layout_constraintBottom_toTopOf="@id/main_bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/main_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_nav_home"
            android:onClick="onClickChangeView"
            android:text="@string/title_home"
            android:textAllCaps="false"
            android:textColor="@color/color_nav_bottom"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/button_nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_nav_chat"
            android:onClick="onClickChangeView"
            android:text="@string/title_chat"
            android:textAllCaps="false"
            android:textColor="@color/color_nav_bottom"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>

        <Space
            android:layout_width="56dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button_nav_myEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_nav_my_events"
            android:onClick="onClickChangeView"
            android:text="@string/title_Events"
            android:textAllCaps="false"
            android:textColor="@color/color_nav_bottom"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/button_nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_nav_profile"
            android:onClick="onClickChangeView"
            android:text="@string/title_profile"
            android:textAllCaps="false"
            android:textColor="@color/color_nav_bottom"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <!-- Floating Button -->
    <ImageView
        android:id="@+id/main_floatingButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_nav_plus"
        android:background="@drawable/bg_floating_button"
        android:onClick="onClickNewEvent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>