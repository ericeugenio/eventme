<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->
    <style name="toolbar_text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="bold_text" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="default_text" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Floating Button -->
    <style name="floatingButton_style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/floatingButton_shape</item>
    </style>
    <style name="floatingButton_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="bottomSheet_style" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheet_shape</item>
    </style>

    <style name="bottomSheet_shape" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- Date picker -->
    <style name="datePicker_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <!-- Image Corners -->
    <style name="card_event_image_corner" parent="">
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>
    <style name="profile_image_corner" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="newEvent_image_corner" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>